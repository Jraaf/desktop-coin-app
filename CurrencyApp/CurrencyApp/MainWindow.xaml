<Window x:Class="CurrencyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:CurrencyApp" 
        xmlns:userControls="clr-namespace:CurrencyApp.Views.UserControls"
        mc:Ignorable="d" 
        Title="CurrencyApp" Height="800" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Top 10" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36"/>
        <userControls:BreifInfo Grid.Row="1" Width="200" Height="70" />
        <userControls:BreifInfo Grid.Row="2" Width="200" Height="70"/>
        <Button x:Name="btnSearch" Content="Browse for more" 
                Grid.Row="10" Width="150" Height="50" 
                HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
